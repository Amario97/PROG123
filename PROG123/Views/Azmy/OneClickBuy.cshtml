@{
    ViewData["Title"] = "OneClickBuy";
    Layout = "~/Views/Shared/_AzmyLayout.cshtml";
}
@model  PROG123.Models.PurchaseModel

<h1>OneClickBuy</h1>

<div>
    Hi @Model.PersonModel.FName,
    <br />
